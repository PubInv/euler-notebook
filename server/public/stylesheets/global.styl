:root
  --header-height 32px
  --sidebar-width 60px

// Specific elements

#banner
  background-color yellow
  left 0
  position fixed
  top 0
  width 100%
  z-index 10

  > *
    padding 8pt
    border-bottom 1px solid black

  .banner
    background-color lightblue
    color black

  .close
    color inherit
    background-color transparent
    border none
    padding 0
    float right

  .error
    background-color red
    color white

  .success
    background-color green
    color white

  .warning
    background-color yellow
    color black

#header
  align-items center
  background-color darkgray
  display flex
  flex-direction row
  height var(--header-height)
  justify-content space-between
  left var(--sidebar-width)
  padding 0 6pt 0 6pt
  position fixed
  right 0
  top 0

  button
    // background none!important
    background none
    border none
    height 30px
    padding 2px
    width 30px
    // color blue
    // cursor pointer
    // font inherit
    // padding-right 0!important
    // padding-left 2
    // text-decoration underline

  button:disabled
    svg
      fill #808080

#sidebar
  background-color darkgray
  height 100%
  left 0
  position fixed
  top 0
  width var(--sidebar-width)

  .separator
    height 4px

  button
    // background none!important
    background none
    border none
    height var(--sidebar-width)
    padding 4px
    width var(--sidebar-width)

  button:disabled
    svg
      fill #808080

  button:focus
    background-color lemonchiffon

// Element classes

// Element types

body
  font-family Arial, Helvetica, sans-serif
  height 100%
  margin 0
  user-select none

// Don't have round buttons on iOS
// TODO: This prevents disabled buttons from appearing differently than enabled buttons.
button
  -webkit-appearance: none
  border-radius 0
  border 1px solid black

form
  margin-bottom 1em

html
  height 100%
