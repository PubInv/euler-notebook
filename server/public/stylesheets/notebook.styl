// Specific elements

#debugWindow
  background-color #eeeeee
  border 1px solid black
  font-size smaller
  height 80%
  left 10%
  overflow hidden
  overflow-y scroll
  position absolute
  top 10%
  white-space nowrap
  width 80%
  z-index 10

  .nested
    padding-left 1em

  .collapsed::before
    content "\0025b6 "

  .expanded::before
    content "\0025bc "

  .leaf::before
    content "\0025cf "

#footer
  bottom 0
  left 0
  position fixed
  width 100%

  button
    width 30pt

#inputArea
  border-top 1px solid #cccccc
  display flex
  flex-direction row
  height 3in

#inputControls
  border-left 1px solid #cccccc
  display flex
  flex-direction column

#inputMath
#inputKeyboard
#inputText
  flex 1

#inputSelector
  border-right 1px solid #cccccc
  display flex
  flex-direction column

#menu
  align-items center
  background-color #cccccc
  display flex
  flex-direction row
  justify-content space-between
  padding 2pt

  button
    background none!important
    border none
    color blue
    cursor pointer
    font inherit
    padding 0!important
    text-decoration underline

#previewArea
  border-top 1px solid #cccccc
  display flex
  flex-direction row

#previewMath
#previewKeyboard
#previewText
  flex 1
  padding 4pt

// Element classes

// .tdoc
  // display flex
  // flex-direction column

.deleteThought
.showStyle
  color inherit
  background-color transparent
  border none
  padding 0

.deleteThought
  float right
  
.showStyle
  float left

.style
  .MATHJS
    color blue
  .MATHSTEPS
    color purple

.thought, .style
  border 1px solid #cccccc
  margin 2pt
  padding 2pt

  .header
    font-size x-small
    color#cccccc

// Element types

body
  height 100%
  margin 0

html
  height 100%
