// Specific elements

#debugWindow
  background-color #eeeeee
  border 1px solid black
  font-size smaller
  height 80%
  left 10%
  overflow hidden
  overflow-y scroll
  position absolute
  top 10%
  white-space nowrap
  width 80%
  z-index 10

  .nested
    padding-left 1em

  .collapsed::before
    content "\0025b6 "

  .expanded::before
    content "\0025bc "

  .leaf::before
    content "\0025cf "

#inputArea
  border 1px solid #cccccc

#inputMath
#inputText
  height 1in
  pen-action none
  touch-action none

#leftDock
  background-color #c0c0c0
  display flex
  flex-direction column
  left 0
  position fixed
  top 20%

  button
    width 50pt
    height 50pt
#menu
  align-items center
  background-color #cccccc
  display flex
  flex-direction row
  justify-content space-between
  padding 2pt

  button
    background none!important
    border none
    color blue
    cursor pointer
    font inherit
    padding 0!important
    text-decoration underline

// Element classes

.deleteStyle
  color inherit
  background-color transparent
  border none
  padding 0
  width 36px
  visibility hidden

.error
  color red
  font-size x-small

.formula
  flex-grow 1

.handle
  padding 4px 0 4px 0
  text-align right
  width 48px

.status
  text-align left
  width 36px

.thought
  align-items center
  display flex
  flex-direction row
  margin 18px 0 18px 0

.thought.selected
  background-color: #f0f0f0

.thought.selected .deleteStyle
  visibility visible

.thought.selected .tools
  visibility visible

.tool
  color blue
  background-color transparent
  border none
  padding 0
  text-decoration underline

.tools
  width 80px
  visibility hidden

@media (hover: hover) {
  .thought:hover .tools { visibility: visible }
  .thought:hover { background-color:#f8f8f8 }
  .thought:hover .deleteStyle { visibility: visible }
}

// Element types

body
  height 100%
  margin 0

html
  height 100%
