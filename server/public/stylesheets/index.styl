// Globals

:root
  --cell-left-margin 60px
  --header-button-padding 2px
  --header-height 28px
  // --page-aspect-ratio calc(8.5 / 11)
  --searchbar-height 30px
  --sidebar-button-padding 4px
  --sidebar-width 56px
  --svg-left-offset 6px
  --svg-top-offset 0px
  --tools-height 20%

// Specific elements

#cellView
  // REVIEW: Is this used?
  border-left 1px solid pink
  display flex
  flex-flow column nowrap
  margin-left var(--cell-left-margin)
  margin-top 60px
  min-height 100%
  width 100%

#debugConsole
  background-color rgba(255,255,255,0.8)
  border-top 1px solid red
  border-right 1px solid red
  bottom 0
  font-size x-small
  height 30%
  left var(--sidebar-width)
  overflow scroll
  position absolute
  width 50%
  z-index 10

#header
  align-items center
  border-bottom 1px solid gray
  display flex
  flex-direction row
  height var(--header-height)
  justify-content space-between
  left 0
  padding 0 6pt 0 6pt
  position fixed
  right 0
  top 0
  z-index 10

  #title
    user-select text

  button
    height var(--header-height)
    padding var(--header-button-padding)
    width var(--header-height)

  button:disabled
    svg
      fill #808080

#homeScreen
  padding 48px 0 0 48px

#messageDisplay
  bottom 20px
  right 20px
  position fixed
  width 40%
  user-select text
  z-index 10

  .message
    border-radius 6px
    display flex
    font-size x-small
    justify-content space-between
    margin-bottom 4px
    padding 6px

    .close
      user-select none

    pre
      margin 0

  .error
    background-color red
    color white

  .success
    background-color green
    color white

  .warning
    background-color yellow
    color black

// Element classes

.debugPopup
  background-color #EEEEEE
  border 1px solid black
  font-size smaller
  height 80%
  left 10%
  overflow hidden
  overflow-y scroll
  position absolute
  top 10%
  user-select text
  white-space nowrap
  width 80%
  z-index 10

  .close
    position absolute
    top 0
    right 0
    background-color transparent
    background-repeat no-repeat
    border none
    cursor pointer
    overflow hidden
    outline none
    user-select none

  .content
    padding 1em

    .nested
      padding-left 1em

    .collapsed::before
      content "\0025b6 "

    .expanded::before
      content "\0025bc "

    .leaf::before
      content "\0025cf "

.entityButton
  background none
  border none
  color inherit
  padding 0

.entityButton:hover
  background-color lightgray

.folderScreen

  .content
    padding 24px 0px 0px 24px

    >.folderList
      margin-bottom 24px

      >.folderRow

        >.error
          color red
          font-size small

.iconButton
  background none
  border none
  color inherit
  padding 0

.iconButton:hover
  background-color lightgray

.notebookEditScreen

  >.content

    >.cell
      position relative

      >.main
        display flex
        // justify-content space-between

        >.content
          border 1px solid #E0E0E0
          position relative

          >.displaySvg
            display block
            fill none
            left 0
            position absolute
            stroke black
            top 0

        >.imageCell

          >.panel
            height 100%
            width 100%

          >.cameraPanel

            >video
              height 100%
              width 100%

            >.shutterButton
              bottom 0
              position absolute
              right 0

          >.imagePanel

            >.cropBox
              overflow hidden

              >img
                transform-origin top left

        >.leftMargin
        >.rightMargin
          align-items center
          display flex
          justify-content flex-end

          >.iconButton
            padding 6px

        >.leftMargin
          width 30px

        >.rightMargin

          >.deleteButton
            color lightgray

          >.dragIcon
            color lightgray
            cursor grab

      >.resizeBar
        border-top 1px dotted  #F0F0F0
        cursor row-resize
        //height 4pt
        margin 2pt 0
        pen-action none
        position relative
        touch-action none
        width 100%

        >.insertCellBelowButton
          // left 5pt
          top -5pt
          color gray
          position absolute

      >.suggestionPanel
        background-color #F0F0F0
        border 1px solid darkgray
        left 12%
        min-height 60px
        position absolute
        width 76%

        >.suggestion
          cursor pointer

    .cell:focus
      outline none

      >.content
        background-color #E8E8E8 !important

    .cell.selected
      outline #E0E0FF solid 1px

    >.overscrollArea
      height 960px

  >.panel
    background #F0F0F0
    border 1px solid #808080
    height calc(100% - var(--header-height))
    left var(--sidebar-width)
    position fixed
    top var(--header-height)
    width calc(75% - var(--sidebar-width))

  >.referencePanel
    >.referenceForm
      border-bottom 1px solid #808080
      display flex
      justify-content space-between

      >input[type=text]
        background none
        border none
        flex 2
      >input[type=text]:focus
        outline none

      >button[type=submit]
        flex 0
        height var(--header-height)
        padding var(--header-button-padding)
        width var(--header-width)

    >.referenceFrame
      overflow auto
      border none
      width 100%
      // TODO: Need to subtract form height from height.
      height 100%

  >.searchPanel
    display flex
    flex-direction column

    >.searchResults
      overflow auto

    >.searchForm
      border-bottom 1px solid #808080
      display flex
      justify-content space-between

      >input[type=text]
        background none
        border none
        flex 2
      >input[type=text]:focus
        outline none

      >button[type=submit]
        flex 0
        height var(--header-height)
        padding var(--header-button-padding)
        width var(--header-width)

.notebookThumbnailsScreen
.notebookReadScreen
  >.content
    align-content flex-start
    background-color lightgray
    display flex
    flex-flow row wrap

    >.page
      background-color white
      fill none
      outline 1px solid black
      stroke black

.screen
  height calc(100% - var(--header-height))
  left 0
  position fixed
  top var(--header-height)
  width 100%

  >.content
    height calc(100% - var(--header-height))
    left var(--sidebar-width)
    overflow scroll
    position fixed
    top var(--header-height)
    touch-action pan-y
    width calc(100% - var(--sidebar-width))

.sidebar
  border-right 1px solid gray
  height 100%
  left 0
  position fixed
  top var(--header-height)
  width var(--sidebar-width)

  .separator
    margin 2px 0 2px 0
    border-top 1px solid gray

  button
    // background none!important
    height var(--sidebar-width)
    padding var(--sidebar-button-padding)
    width var(--sidebar-width)

.strokePanel

  >.strokeDrawingPanel
  >.strokeSelectionPanel
    background-color transparent
    display block
    fill none
    pen-action none
    position absolute
    touch-action none

  >.strokeDrawingPanel
    // REVIEW: Is it possible to use a vector SVG cursor?
    // TODO: Find or make a better cursor.
    cursor url('/images/cursors/hand-with-stylus.cur'), auto
    stroke gray

  >.strokeSelectionPanel
    // REVIEW: Is it possible to use a vector SVG cursor?
    // TODO: Find or make a better cursor.
    // TODO: Fix the hotspot on this eraser. Should be in the corner, not middle of the eraser.
    cursor  url('/images/cursors/eraser.cur'), auto
    stroke rgba(0,0,0,0.1)
    stroke-width 6

  >.svgPanel
    // background-color white
    display block
    fill none
    stroke black

.errorMessage
  color red
  font-size small

// Element types

body
  font-family Arial, Helvetica, sans-serif
  height 100%
  margin 0
  overscroll-behavior none
  user-select none
  // -webkit-user-select prevents a long touch from popping up a "Copy|Look Up|Share" on iPad.
  // user-select by itself doesn't.
  -webkit-user-select none

button:disabled
  >svg
    fill #808080

html
  height 100%

svg.largeIcon
  width 48px
  height 48px

svg.mediumIcon
  width 24px
  height 24px

svg.smallIcon
  width 12px
  height 12px
