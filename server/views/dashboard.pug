extends layout

block content
  h1 Open TDocs
  if tDocs.length>0
    form(method='post')
      table
        each tDoc in tDocs
          tr
            td= tDoc._name
            td
              input(type='checkbox', name=`tDoc[${tDoc._name}]`)
      button(type='submit', name='action', value='close') Close
  else
    i No open TDocs.
