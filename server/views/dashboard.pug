extends layout

block content

  form(method='post')
    table
      tr
        td(colspan=2) Client Sockets
      if clientSockets.length == 0
        tr
          td(colspan=2)
            i No open client sockets.
      each clientSocket in clientSockets
        tr
          td
            input(type='checkbox', name=`clientSockets[${clientSocket.id}]`)
          td= clientSocket.id
    button(type='submit', name='action', value='closeClient') Close

  form(method='post')
    table
      tr
        td(colspan=2) Notebooks
      if tDocs.length == 0
        tr
          td(colspan=2)
            i No open notebooks.
      each tDoc in tDocs
        tr
          td
            input(type='checkbox', name=`notebooks[${tDoc._name}]`)
          td= tDoc._name
    button(type='submit', name='action', value='closeNotebook') Close
