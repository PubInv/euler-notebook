include iconmonstr

mixin homeScreen
  #homeScreen.screen(style="display:none")
    h1 Euler Notebook
    form#loginForm
      label Username
      input(type='text', name='userName', maxlength=12)
      label Password
      input(type='password', name='password')
      input(type='submit', value="Log in")
      div.errorMessage

mixin svgContent
  svg(id="svgContent", style="display:none")
    defs

doctype html
html(lang='en')
  head
    meta(charset="UTF-8")
    //- These meta tags are copied from MyScript samples.
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="mobile-web-app-capable", content="yes")
    meta(name="HandheldFriendly", content="true")
    title Euler Notebook
    link(rel='stylesheet', href='/stylesheets/index.css')
    script(type='module', src='/javascripts/app.js')
  body
    +svgIcons
    +svgContent
    +homeScreen